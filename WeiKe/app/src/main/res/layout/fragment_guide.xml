<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.zjf.weike.view.fragment.GuideFragment">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/img_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/app_guide_"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/img_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="30dp"
        android:text="@string/app_guide_3"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textSize="25sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/img_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="30dp"
        android:text="@string/app_guide_2"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textSize="25sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_guide"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="70dp"
        android:background="@drawable/ic_guide_justin"
        android:text="@string/btn_nologin"
        android:textColor="@color/cardview_light_background"
        android:textAllCaps="false"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_button_bg_theme_2"
            android:text="@string/button_register"
            android:textAllCaps="false"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_button_bg_theme"
            android:text="@string/button_login"
            android:textAllCaps="false"
            android:visibility="gone"/>

    </LinearLayout>


</FrameLayout>
